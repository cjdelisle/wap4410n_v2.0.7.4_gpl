# Directories
PREFIX = $(INSTALL_ROOT)/
SA_LIB_DIR = $(INSTALL_ROOT)/lib/sa
SADC_PATH = ${SA_LIB_DIR}/sadc
SA_DIR = /var/log
MAN_DIR = $(INSTALL_ROOT)/man
CLEAN_SA_DIR = n
YESTERDAY = 
HISTORY = 7

#override vars with board specific locations...
ifeq ($(BOARD_TYPE), pb42)
PREFIX = ../../tools/rootdir/
SA_LIB_DIR = ../../tools/rootdir//lib/sa
SADC_PATH = ${SA_LIB_DIR}/sadc
SA_DIR = /tmp
MAN_DIR = ../../tools/rootdir//man
endif

DFLAGS =
SAS_DFLAGS =

ENABLE_NLS = n
ENABLE_SMP_WRKARD = n

ifeq ($(ENABLE_NLS),y)
# NLS (National Language Support)
REQUIRE_NLS = -DUSE_NLS -DPACKAGE=\"$(PACKAGE)\" -DLOCALEDIR=\"$(PREFIX)/share/locale\"
endif
ifdef REQUIRE_NLS
   DFLAGS += $(REQUIRE_NLS)
endif

ifeq ($(ENABLE_SMP_WRKARD),y)
# Uncomment this to enable workaround for Linux kernel SMP race condition
SAS_DFLAGS += -DSMP_RACE
endif

# Man page group
MAN_GROUP = man

# Crontab owner
CRON_OWNER = adm

# Run-command directories
RC_DIR = /etc
INIT_DIR = /etc/init.d
INITD_DIR = init.d

INSTALL_CRON = n

